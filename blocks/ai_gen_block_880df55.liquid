{% doc %}
  @prompt
    An announcement bar with text that scrolls left to right

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scroll-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding }}px 0;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;}

  .ai-scroll-content-{{ ai_gen_id }} {
    display: inline-block;
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .ai-scroll-bar-{{ ai_gen_id }}:hover .ai-scroll-content-{{ ai_gen_id }} {
    animation-play-state: {{ block.settings.pause_on_hover | default: true |ternary: 'paused', 'running' }};
  }

  @media screen and (max-width: 749px) {
    .ai-scroll-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-scroll-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scroll-content-{{ ai_gen_id }}">
    {{ block.settings.announcement_text }}
  </div>
</div>

{% schema %}
{
  "name": "Scrolling announcement",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on orders over $50! Limited time offer."
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "Scroll speed",
      "default": 15
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Vertical padding",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Scrolling announcement"
    }
  ],
  "tag": null
}
{% endschema %}