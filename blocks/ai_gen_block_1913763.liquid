      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Search border radius",
      "default": 6
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
