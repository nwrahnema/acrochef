{% doc %}
  @prompt
    A heading with two levels, top should have the logo and search bar while the bottom should have the menu items, profile, and cart
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .ai-header-top-{{ ai_gen_id }} {
    padding: {{ block.settings.top_padding }}px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    gap: 20px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-header-logo-{{ ai_gen_id }} img {
    height: {{ block.settings.logo_height }}px;
    width: auto;
    object-fit: contain;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} {
    height: {{ block.settings.logo_height }}px;
    width: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 4px;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-header-search-{{ ai_gen_id }} {
    flex-grow: 1;
    max-width: 500px;
    position: relative;
  }

  .ai-header-search-form-{{ ai_gen_id }} {
    position: relative;width: 100%;
  }

  .ai-header-search-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 50px 12px 16px;
    border: 1px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    background-color: {{ block.settings.search_background_color }};
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-header-search-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.accent_color }};
    outline-offset: 1px;
  }

  .ai-header-search-button-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.text_color }};
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-header-search-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-header-bottom-{{ ai_gen_id }} {
    padding: {{ block.settings.bottom_padding }}px 20px;
    background-color: {{ block.settings.nav_background_color }};
    border-top: 1px solid {{ block.settings.border_color }};
  }

  .ai-header-nav-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 2rem;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_spacing }}px;
    list-style: none;margin: 0;
    padding: 0;
  }

  .ai-header-nav-item-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: {{ block.settings.nav_font_weight }};
    padding: 8px 0;
    transition: color 0.3s ease;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-header-action-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.nav_text_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: color 0.3s ease;position: relative;
  }

  .ai-header-action-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-header-cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: -4px;
    right: -4px;
    background-color: {{ block.settings.accent_color }};
    color: white;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
    min-width: 18px;
  }

  @media screen and (max-width: 768px) {
    .ai-header-top-{{ ai_gen_id }} {
      padding: {{ block.settings.top_padding | times: 0.7 }}px 15px;
      gap: 15px;
    }

    .ai-header-bottom-{{ ai_gen_id }} {
      padding: {{ block.settings.bottom_padding | times: 0.7 }}px 15px;
    }

    .ai-header-logo-{{ ai_gen_id }} img,
    .ai-header-logo-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-header-search-{{ ai_gen_id }} {
      max-width: none;
    }

    .ai-header-nav-{{ ai_gen_id }} {
      gap: {{ block.settings.menu_spacing | times: 0.7 }}px;overflow-x: auto;scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .ai-header-nav-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-header-nav-link-{{ ai_gen_id }} {
      white-space: nowrap;
      font-size: {{ block.settings.nav_font_size | times: 0.9 }}px;
    }

    .ai-header-actions-{{ ai_gen_id }} {
      gap: 12px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-header-top-{{ ai_gen_id }} {
      flex-wrap: wrap;
    }

    .ai-header-search-{{ ai_gen_id }} {
      order: 3;
      flex-basis: 100%;margin-top: 15px;
    }
  }
{% endstyle %}

<header class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-top-{{ ai_gen_id }}">
    <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
      {%- if settings.logo != blank -%}
        <div class="header__heading-logo-wrapper">
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
          {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
          {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
          {{
            settings.logo
            | image_url: width: 600
            | image_tag:
              class: 'header__heading-logo',
              widths: widths,
              height: logo_height,
              width: settings.logo_width,
              alt: logo_alt,
              sizes: sizes,
              preload: true
          }}
        </div>
      {%- else -%}
        <span class="h2">{{ shop.name }}</span>
      {%- endif -%}
    </a>

    <div class="ai-header-search-{{ ai_gen_id }}">
      <form action="{{ routes.search_url }}" method="get" class="ai-header-search-form-{{ ai_gen_id }}">
        <input
          type="search"
          name="q"
          class="ai-header-search-input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.search_placeholder }}"
          value="{{ search.terms | escape }}"
          autocomplete="off"
        >
        <button type="submit" class="ai-header-search-button-{{ ai_gen_id }}" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="M21 21l-4.35-4.35"></path>
          </svg>
        </button>
      </form>
    </div>
  </div>

  <div class="ai-header-bottom-{{ ai_gen_id }}">
    <div class="ai-header-nav-container-{{ ai_gen_id }}">
      <nav>
        <ul class="ai-header-nav-{{ ai_gen_id }}">
          {% for link in linklists[block.settings.menu].links %}
            <li class="ai-header-nav-item-{{ ai_gen_id }}">
              <a href="{{ link.url }}" class="ai-header-nav-link-{{ ai_gen_id }}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <div class="ai-header-actions-{{ ai_gen_id }}">
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="ai-header-action-button-{{ ai_gen_id }}" aria-label="Account">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </a>
        {% endif -%}
        <a href="{{ routes.cart_url }}" class="ai-header-action-button-{{ ai_gen_id }}" aria-label="Cart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          {%- if cart != empty -%}
            <div class="ai-header-cart-count-{{ ai_gen_id }}">
              {%- if cart.item_count < 100 -%}
                <span aria-hidden="true">{{ cart.item_count }}</span>
              {%- endif -%}
              <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
            </div>
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Two level header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo height",
      "default": 50
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder text",
      "default": "Search products..."
    },
    {
      "type": "range",
      "id": "search_border_radius",
