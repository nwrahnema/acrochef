          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Top section padding",
      "default": 16
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Bottom section padding",
      "default": 12
