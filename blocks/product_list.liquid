{% doc %}
  @prompt
    A horizontally scrollable section containing various products.
{% enddoc %}
{% assign product_list_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-list-scroll-{{ product_list_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .product-list-scroll-container-{{ product_list_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-list-scroll-header-{{ product_list_id }} {
    margin-bottom: {{ block.settings.header_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .product-list-scroll-title-{{ product_list_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 8px;font-weight: 600;
  }

  .product-list-scroll-description-{{ product_list_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    opacity: 0.8;
  }

  .product-list-scroll-wrapper-{{ product_list_id }} {
    position: relative;
    overflow: hidden;
  }

  .product-list-scroll-track-{{ product_list_id }} {
    display: flex;
    gap: {{ block.settings.product_spacing }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 10px;
  }

  .product-list-scroll-track-{{ product_list_id }}::-webkit-scrollbar {
    display: none;
  }

  .product-list-card-{{ product_list_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-list-card-{{ product_list_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .product-list-image-wrapper-{{ product_list_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .product-list-image-{{ product_list_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-list-card-{{ product_list_id }}:hover .product-list-image-{{ product_list_id }} {
    transform: scale(1.05);
  }

  .product-list-image-placeholder-{{ product_list_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .product-list-image-placeholder-{{ product_list_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .product-list-badge-{{ product_list_id }} {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;}

  .product-list-info-{{ product_list_id }} {
    padding: {{ block.settings.card_padding }}px;}

  .product-list-vendor-{{ product_list_id }} {
    color: {{ block.settings.text_color }};
    font-size:12px;
    opacity: 0.6;
    margin-bottom: 4px;
    text-transform: uppercase;letter-spacing: 0.5px;
  }

  .product-list-title-{{ product_list_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-list-price-{{ product_list_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .product-list-price-compare-{{ product_list_id }} {
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    text-decoration: line-through;
    margin-left: 8px;font-weight: 400;
  }

  .product-list-button-{{ product_list_id }} {
    width: 100%;
    padding: 10px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size:14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;}

  .product-list-button-{{ product_list_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .product-list-scroll-controls-{{ product_list_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 20px;
  }

  .product-list-scroll-button-{{ product_list_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.control_button_color }};
    color: {{ block.settings.control_button_text_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, opacity 0.3s ease;
  }

  .product-list-scroll-button-{{ product_list_id }}:hover {
    background-color: {{ block.settings.control_button_hover_color }};}

  .product-list-scroll-button-{{ product_list_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  @media screen and (max-width: 749px) {
    .product-list-card-{{ product_list_id }} {
      flex: 0 0 {{ block.settings.card_width | times: 0.8 }}px;
    }

    .product-list-scroll-container-{{ product_list_id }} {
      padding: 0 16px;
    }

    .product-list-scroll-title-{{ product_list_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<product-list-scroll-{{ product_list_id }}
  class="product-list-scroll-{{ product_list_id }}"
  {{ block.shopify_attributes }}
>
  <div class="product-list-scroll-container-{{ product_list_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="product-list-scroll-header-{{ product_list_id }}">
        {% if block.settings.title != blank %}
          <h2 class="product-list-scroll-title-{{ product_list_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="product-list-scroll-description-{{ product_list_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="product-list-scroll-wrapper-{{ product_list_id }}">
      <div class="product-list-scroll-track-{{ product_list_id }}" data-scroll-track>
        {% if block.settings.collection != blank %}
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <div class="product-list-card-{{ product_list_id }}">
              <div class="product-list-image-wrapper-{{ product_list_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="product-list-image-{{ product_list_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="product-list-image-placeholder-{{ product_list_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <div class="product-list-badge-{{ product_list_id }}">Sale</div>
                {% elsif product.available == false %}
                  <div class="product-list-badge-{{ product_list_id }}">Sold out</div>
                {% endif %}
              </div>

              <div class="product-list-info-{{ product_list_id }}">
                {% if block.settings.show_vendor and product.vendor != blank %}
                  <div class="product-list-vendor-{{ product_list_id }}">{{ product.vendor }}</div>
                {% endif %}

                <h3 class="product-list-title-{{ product_list_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                <div class="product-list-price-{{ product_list_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="product-list-price-compare-{{ product_list_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>

                {% if block.settings.show_add_to_cart %}
                  {% if product.available -%}
                    <a href="{{ product.url }}" class="product-list-button-{{ product_list_id }}">
                      {{ block.settings.button_text -}}
                    </a>
                  {% else %}
                    <button class="product-list-button-{{ product_list_id }}" disabled>Sold out</button>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% else %}
          {% for i in (1..8) %}
            <div class="product-list-card-{{ product_list_id }}">
              <div class="product-list-image-wrapper-{{ product_list_id }}">
                <div class="product-list-image-placeholder-{{ product_list_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              </div>
              <div class="product-list-info-{{ product_list_id }}">
                <h3 class="product-list-title-{{ product_list_id }}">Product title</h3>
                <div class="product-list-price-{{ product_list_id }}">$29.99</div>
                {% if block.settings.show_add_to_cart %}
                  <button class="product-list-button-{{ product_list_id }}">
                    {{ block.settings.button_text }}
                  </button>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>

    {% if block.settings.show_scroll_controls %}
      <div class="product-list-scroll-controls-{{ product_list_id }}">
        <button
          class="product-list-scroll-button-{{ product_list_id }}"
          data-scroll-prev
          aria-label="Previous products"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>
        <button class="product-list-scroll-button-{{ product_list_id }}" data-scroll-next aria-label="Next products">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</product-list-scroll-{{ product_list_id }}>

<script>
  (function() {
    class ProductListScroll{{ product_list_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollTrack = this.querySelector('[data-scroll-track]');
        this.prevButton = this.querySelector('[data-scroll-prev]');
        this.nextButton = this.querySelector('[data-scroll-next]');

        if (this.prevButton && this.nextButton) {
          this.setupScrollControls();
          this.updateButtonStates();
        }
      }

      setupScrollControls() {
        this.prevButton.addEventListener('click', () => {
          this.scrollTrack.scrollBy({
            left: -{{ block.settings.card_width | plus: block.settings.product_spacing }},
            behavior: 'smooth'
          });
        });

        this.nextButton.addEventListener('click', () => {
          this.scrollTrack.scrollBy({
            left: {{ block.settings.card_width | plus: block.settings.product_spacing }},
            behavior: 'smooth'
          });
        });

        this.scrollTrack.addEventListener('scroll', () => {
          this.updateButtonStates();
        });
      }

      updateButtonStates() {
        const isAtStart = this.scrollTrack.scrollLeft <= 0;
        const isAtEnd = this.scrollTrack.scrollLeft >=
          this.scrollTrack.scrollWidth - this.scrollTrack.clientWidth;

        this.prevButton.disabled = isAtStart;
        this.nextButton.disabled = isAtEnd;
      }
    }

    customElements.define('product-list-scroll-{{ product_list_id }}', ProductListScroll{{ product_list_id }});
  })();
</script>

