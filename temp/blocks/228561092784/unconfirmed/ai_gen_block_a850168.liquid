{% doc %}
  @prompt
    Make a header similar to the "Zwilling" website, Make the background color of the whole header configurable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-zwilling-header-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: {{ block.settings.header_background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
    z-index: 100;
  }

  .ai-zwilling-header__top-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.top_bar_background }};
    color: {{ block.settings.top_bar_text_color }};
    padding: 8px 0;
    font-size: 12px;
    text-align: center;}

  .ai-zwilling-header__main-{{ ai_gen_id }} {
    padding: 16px 0;
  }

  .ai-zwilling-header__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;gap: 40px;
  }

  .ai-zwilling-header__logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-zwilling-header__logo-image-{{ ai_gen_id }} {
    height: {{ block.settings.logo_height }}px;
    width: auto;
  }

  .ai-zwilling-header__nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
  }

  .ai-zwilling-header__nav-list-{{ ai_gen_id }} {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 40px;
  }

  .ai-zwilling-header__nav-item-{{ ai_gen_id }} {
    position: relative;}

  .ai-zwilling-header__nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_text_color }};
    text-decoration: none;
    font-weight: 500;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 10px 0;
    transition: color 0.3s ease;
  }

  .ai-zwilling-header__nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
  }

  .ai-zwilling-header__actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-shrink: 0;
  }

  .ai-zwilling-header__search-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-zwilling-header__search-input-{{ ai_gen_id }} {
    width: 200px;
    padding: 8px 40px 8px 12px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: 4px;
    font-size: 14px;
    background-color: {{ block.settings.input_background }};
  }

  .ai-zwilling-header__search-button-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    color: {{ block.settings.icon_color }};
  }

  .ai-zwilling-header__icon-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
  }

  .ai-zwilling-header__icon-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-zwilling-header__cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: -4px;
    right: -4px;
    background-color: {{ block.settings.cart_count_background }};
    color: {{ block.settings.cart_count_text }};
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }

  .ai-zwilling-header__mobile-menu-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 990px) {
    .ai-zwilling-header__nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-zwilling-header__search-{{ ai_gen_id }} {
      display: none;
    }

    .ai-zwilling-header__mobile-menu-{{ ai_gen_id }} {
      display: block;
    }

    .ai-zwilling-header__container-{{ ai_gen_id }} {
      gap: 20px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-zwilling-header__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-zwilling-header__logo-image-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

<zwilling-header-{{ ai_gen_id }} class="ai-zwilling-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_top_bar and block.settings.top_bar_text != blank %}
    <div class="ai-zwilling-header__top-bar-{{ ai_gen_id }}">
      {{ block.settings.top_bar_text }}
    </div>
  {% endif %}<div class="ai-zwilling-header__main-{{ ai_gen_id }}">
    <div class="ai-zwilling-header__container-{{ ai_gen_id }}">
      <div class="ai-zwilling-header__logo-{{ ai_gen_id }}"><a href="/">
          {% if block.settings.logo %}
            <img
              src="{{ block.settings.logo | image_url: width: 400 }}"
              alt="{{ shop.name }}"
              class="ai-zwilling-header__logo-image-{{ ai_gen_id }}"width="{{ block.settings.logo.width }}"
              height="{{ block.settings.logo.height }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-zwilling-header__logo-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </a>
      </div>

      <nav class="ai-zwilling-header__nav-{{ ai_gen_id }}">
        <ul class="ai-zwilling-header__nav-list-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% assign nav_text_key = 'nav_' | append: i | append: '_text' %}
            {% assign nav_link_key = 'nav_' | append: i | append: '_link' %}
            {% assign nav_text = block.settings[nav_text_key] %}
            {% assign nav_link = block.settings[nav_link_key] %}
            
            {% if nav_text != blank %}
              <li class="ai-zwilling-header__nav-item-{{ ai_gen_id }}">
                <a href="{{ nav_link | default: '#' }}" class="ai-zwilling-header__nav-link-{{ ai_gen_id }}">
                  {{ nav_text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </nav>

      <div class="ai-zwilling-header__actions-{{ ai_gen_id }}">
        {% if block.settings.show_search %}
          <div class="ai-zwilling-header__search-{{ ai_gen_id }}">
            <form action="/search" method="get">
              <input
                type="search"
                name="q"
                placeholder="{{ block.settings.search_placeholder }}"
                class="ai-zwilling-header__search-input-{{ ai_gen_id }}"
                value="{{ search.terms | escape }}"
              >
              <button type="submit" class="ai-zwilling-header__search-button-{{ ai_gen_id }}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="11" cy="11" r="8"></circle>
                  <path d="m21 21-4.35-4.35"></path>
                </svg>
              </button>
            </form>
          </div>
        {% endif %}

        {% if block.settings.show_account %}
          <a href="/account" class="ai-zwilling-header__icon-button-{{ ai_gen_id }}">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </a>
        {% endif %}

        {% if block.settings.show_cart %}
          <a href="/cart" class="ai-zwilling-header__icon-button-{{ ai_gen_id }}" style="position: relative;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <path d="M16 10a4 4 0 0 1-8 0"></path>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="ai-zwilling-header__cart-count-{{ ai_gen_id }}">
                {{ cart.item_count }}
              </span>
            {% endif %}
          </a>
        {% endif %}

        <button class="ai-zwilling-header__mobile-menu-{{ ai_gen_id }} ai-zwilling-header__icon-button-{{ ai_gen_id }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line></svg>
        </button>
      </div>
    </div>
  </div>
</zwilling-header-{{ ai_gen_id }}>

<script>
(function() {
  class ZwillingHeader{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.mobileMenuButton = this.querySelector('.ai-zwilling-header__mobile-menu-{{ ai_gen_id }}');
      this.setupEventListeners();
    }

    setupEventListeners() {
      if (this.mobileMenuButton) {
        this.mobileMenuButton.addEventListener('click', () => {
          console.log('Mobile menu clicked');
        });
      }
    }
  }

  customElements.define('zwilling-header-{{ ai_gen_id }}', ZwillingHeader{{ ai_gen_id }});
})();
</script>

