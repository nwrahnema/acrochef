{% doc %}
  @prompt
    Create a unique and creative section with placeholders inteded the copy "Premium cookware for the everyday chef", CTA saying "Shop Now", and an image banner., Remove the badge, invert the colors on the title, subtitle, and button by giving it a background color
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-premium-banner-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background: {{ block.settings.background_color }};
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-premium-banner-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
    z-index: 2;
  }

  .ai-premium-banner-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-premium-banner-text-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
    background: {{ block.settings.text_background_color }};
    padding: 40px;
    border-radius: {{ block.settings.text_border_radius }}px;
    {% if block.settings.layout == 'image_left' %}
      order: 2;
    {% endif %}
  }

  .ai-premium-banner-image-{{ ai_gen_id }} {
    position: relative;
    {% if block.settings.layout == 'image_left' %}
      order: 1;
    {% endif %}
  }

  .ai-premium-banner-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-premium-banner-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-premium-banner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-premium-banner-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-premium-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    backdrop-filter: blur(10px);
  }

  .ai-premium-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    line-height: 1.2;
    margin: 0;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-style: {{ block.settings.title_font.style }};
  }

  .ai-premium-banner-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  .ai-premium-banner-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 16px 32px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }

  .ai-premium-banner-cta-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-premium-banner-cta-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .ai-premium-banner-cta-{{ ai_gen_id }}:hover::before {
    left: 100%;
  }

  .ai-premium-banner-cta-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .ai-premium-banner-cta-{{ ai_gen_id }}:hover .ai-premium-banner-cta-icon-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-premium-banner-decorative-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .ai-premium-banner-circle-{{ ai_gen_id }} {
    position: absolute;
    border-radius: 50%;
    background: {{ block.settings.accent_color }};
    opacity: 0.1;
  }

  .ai-premium-banner-circle-1-{{ ai_gen_id }} {
    width: 200px;
    height: 200px;
    top: -100px;
    right: -100px;
  }

  .ai-premium-banner-circle-2-{{ ai_gen_id }} {
    width: 150px;
    height: 150px;
    bottom: -75px;
    left: -75px;
  }

  .ai-premium-banner-circle-3-{{ ai_gen_id }} {
    width: 100px;
    height: 100px;
    top: 50%;
    left: 20%;
    transform: translateY(-50%);
  }

  @media screen and (max-width: 990px) {
    .ai-premium-banner-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-premium-banner-text-{{ ai_gen_id }},
    .ai-premium-banner-image-{{ ai_gen_id }} {
      order: unset !important;
    }

    .ai-premium-banner-image-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-premium-banner-text-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-premium-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-premium-banner-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-premium-banner-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-premium-banner-content-{{ ai_gen_id }} {
      gap: 30px;
    }

    .ai-premium-banner-text-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-premium-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-premium-banner-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-premium-banner-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.6 }}px;
    }

    .ai-premium-banner-cta-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: 15px;
    }
  }
{% endstyle %}

<div class="ai-premium-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-premium-banner-decorative-{{ ai_gen_id }}">
    <div class="ai-premium-banner-circle-{{ ai_gen_id }} ai-premium-banner-circle-1-{{ ai_gen_id }}"></div>
    <div class="ai-premium-banner-circle-{{ ai_gen_id }} ai-premium-banner-circle-2-{{ ai_gen_id }}"></div>
    <div class="ai-premium-banner-circle-{{ ai_gen_id }} ai-premium-banner-circle-3-{{ ai_gen_id }}"></div>
  </div>

  <div class="ai-premium-banner-container-{{ ai_gen_id }}">
    <div class="ai-premium-banner-content-{{ ai_gen_id }}">
      <div class="ai-premium-banner-text-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-premium-banner-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}

        {% if block.settings.subtitle != blank %}
          <p class="ai-premium-banner-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-premium-banner-cta-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
            <svg class="ai-premium-banner-cta-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          </a>
        {% endif %}
      </div>

      <div class="ai-premium-banner-image-{{ ai_gen_id }}">
        <div class="ai-premium-banner-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-premium-banner-image-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
              <div class="ai-premium-banner-empty-state-{{ ai_gen_id }}">
                Add your banner image
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

