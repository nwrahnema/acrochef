{%- style -%}
  .video-banner-container {
    position: relative;
    height: min(85vh, 800px);
    margin-inline: auto;
    max-width: 1600px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .video-banner-container-container {
    margin: 0 2rem;
  }

  .video-banner {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    position: absolute;
    filter: brightness(0.6);
  }

  .video-banner-text {
    z-index: 1;
    color: white;
    display: flex;
    align-items: center;
    flex-direction: column;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    padding: 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .video-banner-hero {
    font-size: clamp(2rem, 6vw, 6rem);
    text-align: center;
    text-transform: capitalize;
  }

  .video-banner-cta {
    display: flex;
    width: 100%;
    justify-content: center;
    gap: 24px;
    text-align: center;
  }

  @media (max-width: 749px) {
    .video-banner-container-container {
      margin: 0;
    }
    .video-banner-container {
      height: 320px;
      min-height: 220px;
      align-items: flex-start;
    }
    .video-banner-text {
      margin-top: 4rem;
      padding: 1rem;
      font-size: 1rem;
    }
    .video-banner-hero {
      font-size: clamp(1.5rem, 8vw, 2.5rem);
    }
    .video-banner-cta {
      gap: 10px;
      margin-top: 1rem;
    }
    .shop-button {
      font-size: 1.2rem;
      padding: 0.6rem 1.1rem;
      min-width: 120px;
    }
  }
{%- endstyle -%}

<div class="video-banner-container-container">
  <div class="video-banner-container">
    {{
      section.settings.video
      | video_tag: autoplay: true, loop: true, controls: false, muted: true, class: 'video-banner'
    }}
    <div class="video-banner-text">
      <div class="video-banner-hero">
        <span>Bring your kitchen to</span>
        <i>life</i>
      </div>
      <div>Professional-grade cookware for every occasion</div>
      <div class="video-banner-cta">
        <a
          href="{{ routes.collections_url }}/cookware-kitchenware-new"
          class="shop-button"
          >Shop Cookware</a
        >
        <a
          href="{{ routes.collections_url }}/commercial-equipment-new"
          class="shop-button"
          >Shop Food Equipment</a
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.video-banner.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.video-banner.settings.header__1.content"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.video-banner.settings.video.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.video-banner.presets.name"
    }
  ]
}
{% endschema %}
